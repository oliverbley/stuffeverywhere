<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.fourbit.stuffeverywhere"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <org.fourbit.stuffeverywhere.layouts.FlowLayout
        android:id="@+id/tagCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalSpacing="10dp"
        app:verticalSpacing="5dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:completionHint="Create or look for tags"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Create or look for tags" >

        <requestFocus />
    </AutoCompleteTextView>

</LinearLayout>